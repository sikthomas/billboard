<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.glac.transport.OwnerDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_availability_owner"
                android:layout_marginTop="2dp"
                android:paddingLeft="8dp"
                android:textColor="@color/Green"
                android:textStyle="bold"
                />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch_availability"
                android:text="Availability  "
                android:textAllCaps="false"
                android:textOff="No"
                android:textOn="Yes"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:textSize="20dp"
                android:paddingRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Owner Details"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"
                android:layout_gravity="center"
                android:id="@+id/profileImage_transport_owner"
                android:src="@color/lightGrray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Owner Details"
                android:id="@+id/tv_owner_transport"
                android:layout_marginTop="10dp"
                android:padding="4dp"
                android:background="@drawable/owner_shape_details"
                android:textColor="@color/white"
                android:layout_margin="8dp"
                android:elevation="8dp"
                />
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floating_call_transport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/ic_menu_call"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:clickable="true"
                app:backgroundTint="@color/bg_screen3"
                app:elevation="10dp" />
            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="30dp"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@color/white"
                android:layout_gravity="center">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:id="@+id/btn_approve"
                    android:theme="@style/PrimaryButtonTransporAccept"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Approve"
                    android:textAllCaps="false"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:id="@+id/btn_decline"
                    android:theme="@style/PrimaryButtonTransportDecline"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Decline"
                    android:textAllCaps="false"
                    android:layout_weight="1"/>


            </LinearLayout>
            </LinearLayout>
    </ScrollView>

</LinearLayout>
