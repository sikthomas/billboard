<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.glac.account.MyAccountSetting"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/profile_image" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                app:contentPadding="8dp"
                app:cardElevation="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtFirstName"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:hint="First Name"
                        android:drawableLeft="@drawable/ic_person_black_account"
                        android:drawablePadding="10dp"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/accent"
                        android:inputType="textPersonName"
                        />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtLastName"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:hint="Last Name"
                        android:drawableLeft="@drawable/ic_person_black_account"
                        android:drawablePadding="10dp"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/accent"
                        android:inputType="textPersonName"
                        />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtID"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:hint="ID"
                        android:drawableLeft="@drawable/ic_confirmation_number_black_24dp"
                        android:drawablePadding="10dp"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/accent"
                        android:inputType="number"
                        />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtPhoneNumberAccountSetup"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:hint="Phone Number"
                        android:drawableLeft="@drawable/ic_phone_black_24dp"
                        android:drawablePadding="10dp"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/accent"
                        android:inputType="number"
                        />

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtEmailAccount"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:hint="Email"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:drawablePadding="10dp"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/accent"
                        android:inputType="textEmailAddress"
                        />
                    <Spinner
                        android:id="@+id/spinnerLoaction"
                        android:layout_marginTop="10dp"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="24dp"
                        android:entries="@array/spinneritems">

                    </Spinner>
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtLocalArea"
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:hint="Local Area of Stay"
                        android:drawableLeft="@drawable/ic_person_black_account"
                        android:drawablePadding="10dp"
                        android:textColorHint="@color/grey"
                        android:textColor="@color/accent"
                        android:inputType="textPersonName"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <com.dd.processbutton.iml.ActionProcessButton
                android:id="@+id/btnAccountProfile"
                pb_colorComplete="@color/green_complete"
                pb_colorError="@color/red_error"
                pb_colorNormal="@color/blue_normal"
                pb_colorPressed="@color/blue_pressed"
                pb_colorProgress="@color/purple_progress"
                android:background="@drawable/shapes_buttons"
                pb_textComplete="Success"
                pb_textError="Error"
                pb_textProgress="Loading"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="Submit Details"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Powered by GLAC International"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16dp" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
